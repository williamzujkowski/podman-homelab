# {{ ansible_managed }}
# Chrony configuration for homelab

# Time servers
{% for server in base_chrony_servers %}
server {{ server.server }} {{ server.options }}
{% endfor %}

# NTS key dump directory
ntsdumpdir {{ base_chrony_ntsdumpdir }}

# Allow stepping the clock for initial sync
makestep {{ base_chrony_makestep }}

# Record the rate at which the system clock gains/losses time
driftfile /var/lib/chrony/drift

# Enable kernel synchronisation
rtcsync

# Allow NTP client access from local network
allow 192.168.0.0/16
allow 10.0.0.0/8

# Specify directory for log files
logdir /var/log/chrony

# Select which information is logged
log measurements statistics tracking