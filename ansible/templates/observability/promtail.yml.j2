# Promtail configuration
server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://localhost:3100/loki/api/v1/push

scrape_configs:
  # Scrape systemd journal
  - job_name: journal
    journal:
      json: false
      max_age: 12h
      labels:
        job: systemd-journal
        host: "{{ ansible_hostname }}"
    relabel_configs:
      - source_labels: ['__journal__systemd_unit']
        target_label: 'unit'
      - source_labels: ['__journal__hostname']
        target_label: 'hostname'
      - source_labels: ['__journal_priority_keyword']
        target_label: 'level'

  # Scrape container logs from journald
  - job_name: containers
    journal:
      json: false
      max_age: 12h
      matches: "_SYSTEMD_UNIT=podman.service"
      labels:
        job: containers
        host: "{{ ansible_hostname }}"
    relabel_configs:
      - source_labels: ['__journal_container_name']
        target_label: 'container_name'
      - source_labels: ['__journal_container_id']
        target_label: 'container_id'

  # Static file targets
  - job_name: system
    static_configs:
      - targets:
          - localhost
        labels:
          job: varlogs
          host: "{{ ansible_hostname }}"
          __path__: /var/log/*.log